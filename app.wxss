/*引入全局字体图标*/
@import "./styles/iconfont.wxss";

/*初始化样式*/
page, view, text, swiper, swiper-item, image, navgater {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/*
主题颜色,通过变量实现
*/
page {
    /*定义主题色*/
    --themeColor: #F8544C;
    /*
    定义统一字体大小    假设设计稿是375px
    1px=2rpx
    14px=28rpx
    */
    font-size: 28rpx;
}

image{
    width: 100%;
}
